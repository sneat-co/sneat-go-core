#!/bin/sh
if git diff --name-only --cached | grep -q ":\s*go\.mod"; then
  gomodlint
  exit_code=$?
  if [ $exit_code -ne 0 ]; then
    exit $exit_code
  fi
fi
echo running go build ./...
go build ./...
echo running go test ./...
go test  ./...
echo running golangci-lint ./...
golangci-lint run ./...
echo Done!
